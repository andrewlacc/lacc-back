<hr />
<h6 class="Title">Customer</h6>
<div class="row">
  <%= f.text_field :client_name, { class: "form-control col-3", value: @client_name } %>
</div>
<br />

<h6 class="Title">Off Site Information</h6>
<div class="row">
  <p class="col-5">Date Checked in<%= f.date_select :checked_date, { prompt: true, selected: @date } %></p>
  <p class="col" align="right">SO Number:</p>
  <p class="col"><%= f.text_field :service_order, { class: "form-control" } %></p>
</div>
<div class="row">
  <p class="col-2" align="right">Serial Number: </p>
  <p class="col-3"><%= f.text_field :serial_number, { class: "form-control" } %></p>
  <p class="col" align="right">Location to send: </p>
  <%= f.select :location, DISPLAY_OFF_SITES, { }, { class: "form-control col" } %>
</div>

<h6 class="Title">Initial Problem</h6>
<div class="row">
  <%= f.text_area :initial_problem, { size: "100x3", class: "form-control" } %>
</div>
