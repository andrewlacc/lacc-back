<div class="row">
  <div class="col-1">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "lacc_brand.jpg", alt: "", width: "90", height: "90" %>
    <% end %>
  </div>
  <div class="col-11">
    <h1>LA Computer Company Back End</h1>
    <div>
      <% if session[:user_id] %>
        <%= "Logged in as: #{ session[:username] }" %>
        <span class="dropdown">
          <button class="btn btn-info" type="button" id="dropdownMenuButton" data-toggle="dropdown"><i class="fa fa-bars"></i></button>
          <div class="dropdown-menu">
            <a href="/settings" class="dropdown-item"><i class="fa fa-cog"></i> Settings</a>
            <% if session[:access_level] == 'admin' %>
              <a href="/admin" class="dropdown-item"><i class="fa fa-users"></i> Manage Users</a>
            <% end %>
            <%= link_to logout_path, method: :delete do %>
              <button class="dropdown-item"><i class="fa fa-power-off"></i> Log Out</button>
            <% end %>
          </div>
        </span>
      <% else %>
        <div class="form-inline">
          <%= form_tag attempt_login_path, method: 'post' do %>
            <%= number_field_tag :userid, params[:userid], class: 'form-control', placeholder: "User ID" %>
            <%= password_field_tag :password, params[:password], class: 'form-control', placeholder: "Password" %>
            <%= submit_tag "Log In", class: 'btn btn-success' %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<br />

<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link" id="home" href="/"><i class="fa fa-home"></i></a>
  </li>

  <% if session[:user_id] %>
  <li class="nav-item">
    <a class="nav-link" id="computers" href="/computer"><i class="fa fa-desktop"></i></a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="displays" href="/display"><i class="fa fa-television"></i></a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="clients" href="/clients"><i class="fa fa-address-book"></i></a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="onsites" href="/onsite"><i class="fa fa-map-o"></i></i></a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="offsites" href="/off_sites"><i class="fa fa-building"></i></a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="cost" href="/cost"><i class="fa fa-usd"></i></a>
  </li>
  <% end %>

</ul>
