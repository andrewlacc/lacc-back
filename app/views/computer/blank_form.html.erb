    <td align="center" valign="middle" class="Label">WiFi:</td>
    <td>
    	<%= select_tag :wifi, options_for_select(yes_no), include_blank: "Select", class: "form-control" %>
    </td>
    <td align="center" valign="middle" class="Label">Bluetooth:</td>
    <td>
    	<%= select_tag :bluetooth, options_for_select(yes_no), include_blank: "Select", class: "form-control" %>
