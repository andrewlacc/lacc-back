<table width="830" height="80" border="0" cellpadding="2" cellspacing="0" align="center">
  <tr>
    <td align="center"><%= image_tag "lacc_logo.jpg", alt: "", width: "71", height: "68" %></td>
    <td align="center" colspan="5" valign="baseline" class="style2">Refurbished Computer Specifications</td>
  </tr>
  <tr>
    <td colspan="6" align="center" valign="middle" class="Label">
      <%= image_tag "bar.jpg", alt: "", width: "925", height: "25" %>
    </td>
  </tr>
  <tr>
    <td class="Title">Model</td>
  </tr>
  <tr>
    <td align="center" valign="middle" class="Label">Type:</td>
    <td>
      <input type="text" class="form-control">
    </td>
    <td align="center" valign="middle" class="Label">Year: </td>
    <td colspan="3" class="form-row">
      <div class="col">
    	  <%= select_tag :pre_year, options_for_select(year_section), include_blank: "Select", class: "form-control" %>
      </div>
      <div class="col">
        <%= date_select 'model_year', 'model_year', {discard_month: true, discard_day: true, start_year: 2008, end_year: @year, prompt: true}, class: "form-control" %>
      </div>
    </td>
  </tr>
  <tr>
    <td height="10" colspan="6">&nbsp;</td>
  </tr>
  <tr>
    <td align="center" valign="middle" class="Label">Original Part #:</td>
    <td>
      <input type="text" class="form-control">
    </td>
    <td align="center" valign="middle" class="Label">Serial #:</td>
    <td>
      <input type="text" class="form-control">
    </td>
    <td align="center" valign="middle" class="Label">Code:</td>
    <td>
      <input type="text" class="form-control">
    </td>
  </tr>
  <tr>
    <td height="10" colspan="6">&nbsp;</td>
  </tr>
  <tr>
    <td colspan="6" class="Title">Specs</td>
  </tr>
